<project name="Build documentation" default="all">
	<taskdef classpath="bin" name="generateApiJavadoc" classname="org.eclipse.emf.facet.doc.tasks.GenerateApiJavadocTask"/>
	
	<target name="build.javadoc">
		<delete includeemptydirs="true">
		  <fileset dir="./javadoc" includes="**/*" />
		</delete>
		
		<available file="../org.eclipse.emf.facet.util.core" type="dir" property="plugins.path" value="../"/>
		<!-- with the sourceTree containing plugins, doc, etc. subdirs -->
		<available file="../../plugins/" type="dir" property="plugins.path" value="../../plugins/"/>
	
		<echo>javadoc generation from plug-ins in "${plugins.path}"</echo> 
		
		<generateApiJavadoc sourceTreePath="${plugins.path}"
				access="public" author="true" destdir="./javadoc" 
				splitindex="true" doctitle="EMF Facet Javadoc" use="true" version="true"
				pattern="^org\.eclipse\.emf\.facet\..*$">
			<tag name="generated"/>
			<tag name="model"/>
			<tag name="ordered"/>
		</generateApiJavadoc>
				<!-- executable="C:/Program Files/Java/jdk1.6.0_24/bin/javadoc.exe" -->

		<!--
		<javadoc access="public" author="true" destdir="./javadoc" splitindex="true" doctitle="EMF Facet Javadoc" use="true" version="true" >
			<sourcepath>
				<dirset dir="${plugins.path}">
					<include name="org.eclipse.emf.facet.*/src"/>
				</dirset>
			</sourcepath>
		</javadoc>
		-->
	</target>

	<target name="all" depends="build.javadoc"/>

</project>
